@model IEnumerable<UserAdminTasks.Models.Task>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm("Index", "Tasks", FormMethod.Get))
{
    <p>Find by executor name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
    <input type="submit" value="Search" />
     </p>
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FromUser.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToUser.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDateTask)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlannedStartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PlannedCompletionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartExecution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsExecution)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromUser.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToUser.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDateTask)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlannedStartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlannedCompletionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartExecution)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsExecution)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsDone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
